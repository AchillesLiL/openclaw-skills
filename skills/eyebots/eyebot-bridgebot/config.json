{
  "agent_id": "bridgebot",
  "name": "BridgeBot",
  "version": "1.0.0",
  "description": "Cross-chain bridge specialist - moves assets between chains safely",
  "enabled": true,
  "triggers": {
    "keywords": [
      "bridge",
      "cross-chain",
      "transfer chain",
      "bridgebot",
      "move tokens",
      "chain transfer",
      "multichain",
      "bridge tokens",
      "l1 to l2",
      "l2 to l1"
    ],
    "commands": ["/bridge", "/crosschain", "/transfer"],
    "regex_patterns": [
      "bridge.*to",
      "transfer.*chain",
      "move.*from.*to",
      "cross.*chain"
    ]
  },
  "pricing": {
    "payment_wallet": "0x4A9583c6B09154bD88dEE64F5249df0C5EC99Cf9",
    "accepted_tokens": ["ETH"],
    "plans": {
      "trial": {
        "duration_days": 2,
        "price_eth": 0.013,
        "display": "BridgeBot: 0.013 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["basic_bridge", "limited_chains", "manual_tracking"]
      },
      "lifetime": {
        "duration_days": -1,
        "price_eth": 5.0,
        "display": "BridgeBot: 0.013 ETH (2-day) | 5 ETH (lifetime)",
        "features": ["all_bridges", "all_chains", "auto_routing", "bridge_tracking", "gas_optimization"]
      }
    }
  },
  "chains": {
    "ethereum": {
      "chain_id": 1,
      "enabled": true,
      "rpc_env": "ETH_RPC_URL"
    },
    "base": {
      "chain_id": 8453,
      "enabled": true,
      "rpc_env": "BASE_RPC_URL"
    },
    "polygon": {
      "chain_id": 137,
      "enabled": true,
      "rpc_env": "POLYGON_RPC_URL"
    },
    "arbitrum": {
      "chain_id": 42161,
      "enabled": true,
      "rpc_env": "ARBITRUM_RPC_URL"
    },
    "optimism": {
      "chain_id": 10,
      "enabled": true,
      "rpc_env": "OPTIMISM_RPC_URL"
    },
    "avalanche": {
      "chain_id": 43114,
      "enabled": true,
      "rpc_env": "AVALANCHE_RPC_URL"
    }
  },
  "bridges": {
    "across": {
      "enabled": true,
      "api_url": "https://across.to/api",
      "supported_chains": [1, 8453, 137, 42161, 10]
    },
    "stargate": {
      "enabled": true,
      "supported_chains": [1, 137, 42161, 10, 43114]
    },
    "hop": {
      "enabled": true,
      "api_url": "https://api.hop.exchange",
      "supported_chains": [1, 137, 42161, 10]
    },
    "socket": {
      "enabled": true,
      "api_url": "https://api.socket.tech/v2",
      "api_key_env": "SOCKET_API_KEY"
    }
  },
  "automation": {
    "auto_routing": true,
    "gas_estimation": true,
    "slippage_default": 0.5,
    "bridge_tracking": true
  },
  "limits": {
    "min_bridge_amount_usd": 10,
    "max_bridge_amount_usd": 1000000,
    "max_slippage_percent": 3
  }
}
